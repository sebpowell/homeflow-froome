block navigation

	script.
		$(document).ready(function() {
			$(".js-login-modal-open").on("click", function() {
				$(".backdrop").addClass("is-open");
				$(".login-panel").addClass("is-open");
			});

			function closePanel() {
				$(".sliding-panel").removeClass("is-open");
				$(".backdrop").removeClass("is-open");
				$("body").removeClass("overflow-hidden");
			}

			$(".js-dropdown-toggle").on("click", function(e) {
				e.stopPropagation();
				$(this).find(".navigation-dropdown").toggleClass("is-open");
			});

			$("body").on("click", function() {
				$(".navigation-dropdown").removeClass("is-open");
			});

			$(".js-sliding-panel-close").on("click", function() {
				closePanel();
			});

			$(".navigation-parent").on("click", function() {
				$(this).next(".navigation-children").slideToggle();
			});

			$(".js-mobile-navigation-toggle").on("click", function() {
				$(".navigation-mobile").toggleClass("is-open");
				$(this).toggleClass("close");
				$("body").toggleClass("overflow-hidden");
			});

			$(".radio").on("click", function() {
				$(this).addClass("is-checked");
				$(this).siblings().removeClass("is-checked");
			});
		});

